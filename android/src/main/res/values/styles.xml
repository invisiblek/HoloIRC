<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Light" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBar</item>

        <item name="holo_background">@drawable/background_holo_light</item>
        <item name="default_text_colour">@android:color/black</item>
        <item name="default_inverted_text_colour">@android:color/white</item>
        <item name="overflow_menu_drawable">@drawable/ic_action_overflow_dark</item>
        <item name="activatableItemBackground">@drawable/activatable_selector_light</item>
        <item name="expand_close_menu_drawable">@drawable/ic_expand_less</item>
        <item name="expand_open_menu_drawable">@drawable/ic_expand_more</item>
        <item name="action_divider_colour">@color/off_white</item>

        <item name="main_background">@android:color/white</item>
        <item name="expandable_list_background">@color/very_light_grey</item>
        <item name="expandable_list_text">@color/dark_gray</item>
    </style>

    <style name="Dark" parent="@style/Theme.AppCompat">
        <item name="android:actionBarStyle">@style/ActionBar.Dark</item>

        <item name="holo_background">@drawable/background_holo_dark</item>
        <item name="default_text_colour">@android:color/white</item>
        <item name="default_inverted_text_colour">@android:color/black</item>
        <item name="overflow_menu_drawable">@drawable/ic_action_overflow_light</item>
        <item name="activatableItemBackground">@drawable/activatable_item_background</item>
        <item name="expand_close_menu_drawable">@drawable/ic_expand_less_light</item>
        <item name="expand_open_menu_drawable">@drawable/ic_expand_more_light</item>
        <item name="action_divider_colour">@color/dark_gray</item>

        <item name="main_background">@android:color/transparent</item>
        <item name="expandable_list_background">@android:color/transparent</item>
        <item name="expandable_list_text">@android:color/white</item>
    </style>

    <style name="ActionBar" parent="@style/Widget.AppCompat.Light.Base.ActionBar.Solid.Inverse">
        <item name="android:background">@color/action_bar_background_color</item>
    </style>

    <style name="ActionBar.Dark" parent="@style/Widget.AppCompat.Base.ActionBar.Solid">
        <item name="android:background">@color/action_bar_background_color</item>
    </style>

    <style name="TextAppearance.StatusBar.EventContent.Emphasized" parent="@android:style/TextAppearance.StatusBar.EventContent">
        <item name="android:textColor">#cccccc</item>
    </style>

</resources>
